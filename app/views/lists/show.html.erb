<h1><%= @list.name %></h1>
<p>Here are the movies of <%= @list.name %> list.</p>

<ul>
  <% @list.movies.each do |movie| %>
    <li>
      <% bookmark = Bookmark.find_by(movie_id: movie.id, list_id: @list.id) %>
      <img src= <%= movie.poster_url %>%  alt="image for the movie">
      <h3><%= movie.title %></h3>
      <p> <%= movie.rating %></p>
       <%= link_to "Delete movie", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a movie to this list",  new_list_bookmark_path(@list) %>
